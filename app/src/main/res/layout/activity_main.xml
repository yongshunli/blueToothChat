<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/button_search"
        android:text="client side(search for listener)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_message"
        />
    <Button
        android:id="@+id/button_listen"
        android:text="server side(listen to client device)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_search"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="list of found devices"
        android:id="@+id/textView"
        android:hint="liste of found devices"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/list_discovered"
        android:layout_width="fill_parent"
        android:layout_height="156dp"

     />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="list of paired devices"
        android:id="@+id/textView2"
        android:textSize="20dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:id="@+id/list_paired"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/text_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="message a envoyer" />

    <TextView
        android:id="@+id/text_messages"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_listen"
        android:visibility="gone"
        android:text="message received"
        android:textSize="20dp" />
</LinearLayout>
